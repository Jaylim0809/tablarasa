<!-- EDIT Modal HTML -->

<div id="editTaskModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/upload/update" method="POST" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title col-11 text-center">과제 편집</h4>
                    <button type="button" class="col-1 close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-12 text-center">
                            <h6 class="p-2 mg-1 text-white bg-primary" id="edit-access-code-display"></h6>
                            <input type="hidden" name="accessCode" id="edit-access-code" class="form-control" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-5">
                            <select name="grade" id="edit-grade" class="form-control" required>
                                <option value="" selected disabled>학년(필수)</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>
                        <div class="col-7">
                            <input type="text" name="subject" id="edit-subject" class="form-control"
                                placeholder="과목(필수)" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <input type="text" name="lesson" id="edit-lesson" class="form-control" placeholder="단원(필수)"
                                required>
                        </div>
                        <div class="col-8">
                            <input type="text" name="sublesson" id="edit-sublesson" class="form-control"
                                placeholder="소단원(필수)" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea name="activity1" id="edit-activity1" class="form-control" placeholder="세부활동1(필수)"
                            required></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="activity2" id="edit-activity2" class="form-control"
                            placeholder="세부활동2"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="activity3" id="edit-activity3" class="form-control"
                            placeholder="세부활동3"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="activity4" id="edit-activity4" class="form-control"
                            placeholder="세부활동4"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="activity5" id="edit-activity5" class="form-control"
                            placeholder="세부활동5"></textarea>
                    </div>

                    <div class="form-group">
                        <textarea name="activity6" id="edit-activity6" class="form-control"
                            placeholder="세부활동6"></textarea>
                    </div>
                    <div>
                        <div id="edit-image" class="text-center">

                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupFileAddon02">이미지 변경</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="inputGroupFile02"
                                    aria-describedby="inputGroupFileAddon02" name="file" accept="image/*">
                                <label class="custom-file-label" for="inputGroupFile02" id="edit-input-file-label">10mb
                                    이하</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="취소">
                    <input type="submit" class="btn btn-success" value="등록">
                </div>
            </form>
        </div>
    </div>
</div>