<!-- Detail Modal HTML -->

<div id="detailTaskModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/upload/update" method="POST" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title col-11 text-center">과제 세부 내용</h4>
                    <button type="button" class="col-1 close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-12 text-center">
                            <h6 class="p-2 mg-1 text-white bg-primary" id="detail-access-code-display"></h6>
                            <input type="hidden" name="accessCode" id="detail-access-code" class="form-control"
                                readonly>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-5">
                            <input type="text" name="grade" id="detail-grade" class="form-control" placeholder="학년(필수)"
                                readonly>

                        </div>
                        <div class="col-7">
                            <input type="text" name="subject" id="detail-subject" class="form-control"
                                placeholder="과목(필수)" readonly>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <input type="text" name="lesson" id="detail-lesson" class="form-control"
                                placeholder="단원(필수)" readonly>
                        </div>
                        <div class="col-8">
                            <input type="text" name="sublesson" id="detail-sublesson" class="form-control"
                                placeholder="소단원(필수)" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea name="activity1" id="detail-activity1" class="form-control" placeholder="세부활동1(필수)"
                            readonly></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="activity2" id="detail-activity2" class="form-control" placeholder="세부활동2"
                            readonly></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="activity3" id="detail-activity3" class="form-control" placeholder="세부활동3"
                            readonly></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="activity4" id="detail-activity4" class="form-control" placeholder="세부활동4"
                            readonly></textarea>
                    </div>
                    <div class="form-group">
                        <textarea name="activity5" id="detail-activity5" class="form-control" placeholder="세부활동5"
                            readonly></textarea>
                    </div>

                    <div class="form-group">
                        <textarea name="activity6" id="detail-activity6" class="form-control" placeholder="세부활동6"
                            readonly></textarea>
                    </div>
                    <div>
                        <div id="detail-image" class="text-center">

                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="닫기">
                </div>
            </form>
        </div>
    </div>
</div>